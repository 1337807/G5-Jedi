<%= form_for (@quiz) do |f| %>
  Title: <%= f.text_field :title %>
  Description: <%= f.text_field :description %>

  <% f.fields_for (@question) do |q| %>
    <%= q.label :text %>
    <%= q.text_field :text %>
    <%= q.select(:quiz_id, options_for_select(@quizzes.collect {|quiz| [quiz.title, quiz.id]}, params[:quiz_id])) %>
  <% end %>

  <%= f.submit %>
<% end %>
